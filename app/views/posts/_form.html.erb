<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-input">
    <%= f.input :content, require: true, maxlength: 140 %>
    <p>This post will be scheduled in <strong><%= Time.zone.name %></strong> time</p>
    <%= f.input :scheduled_at, required: true, as: :datetime_picker %>
  </div>
  
  <div class="form-input">
    <% if current_user.connection.where(provider: "facebook").any? %>
      <%= f.input :facebook %>
    <% end %>
      
    <% if current_user.connection.where(provider: "twitter").any? %>
      <%= f.input :twitter %>
    <% end %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>